<!-- app/views/projects/_form.html.erb -->

<%= form_with(model: project, url: project.persisted? ? project_path(project) : projects_path, method: project.persisted? ? :patch : :post, html: { class: "mb-3" }) do |form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :project_name, class: "col-form-label" %>
    <%= form.text_field :project_name, class: "form-control", id: "project-name" , required: true , pattern: "^[^\s]+(\s+[^\s]+)*$" , title: "No spaces in beginning and ending" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "col-form-label" %>
    <%= form.text_area :description, class: "form-control", id: "description" , required: true , pattern: "^[^\s]+(\s+[^\s]+)*$" , title: "No spaces in beginning and ending" %>
  </div>
  <%= form.submit project.persisted? ? "Update Project" : "Create Project", class: "btn btn-primary" %>

<% end %>
