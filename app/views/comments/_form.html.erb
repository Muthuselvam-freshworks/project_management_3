<%= form_with(model: [@task, Comment.new], url: task_project_comments_path(@task), method: :post) do |form| %>
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, rows: 3 %>
    </div>
  
    <div class="actions">
      <%= form.submit "Add Comment" %>
    </div>
  <% end %>
  